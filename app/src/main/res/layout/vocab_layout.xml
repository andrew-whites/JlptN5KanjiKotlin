<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Kana"
            android:layout_width="42dp"
            android:layout_height="24dp"
            android:id="@+id/kanaView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="4sp"
            app:autoSizeMaxTextSize="24sp"/>
    <TextView
            android:text="@string/text_wrap_test"
            android:layout_width="187dp"
            android:layout_height="24dp"
            android:id="@+id/kanjiView"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="2sp"
            app:autoSizeMaxTextSize="24sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/kanaView" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textSize="24sp" app:autoSizeStepGranularity="1sp"/>
    <TextView
            android:text="Type"
            android:layout_width="195dp"
            android:layout_height="24dp"
            android:id="@+id/typeView" android:layout_marginTop="8dp"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="4sp"
            app:autoSizeMaxTextSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintTop_toBottomOf="@+id/definition_view"
            app:layout_constraintStart_toEndOf="@+id/kanjiView" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.4"/>
            <!--android:textSize="24sp"-->
    <TextView
            android:text="Description"
            android:layout_width="338dp"
            android:layout_height="24dp"
            android:id="@+id/definition_view"
            android:textAlignment="textEnd"
            android:layout_marginEnd="8dp"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="4sp"
            app:autoSizeMaxTextSize="24sp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/kanaView"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>