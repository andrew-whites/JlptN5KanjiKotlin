<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:fadingEdge="horizontal|vertical"
                                             android:fadingEdgeLength="@android:dimen/thumbnail_width">

    <TextView
            android:text="kanji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kanji_question" android:layout_marginTop="124dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="48sp" app:layout_constraintHorizontal_bias="0.497"/>
            <!--android:backgroundTint="@android:color/darker_gray" android:fadingEdge="horizontal|vertical"-->
            <!--android:background="@android:color/darker_gray"/>-->
    <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next_button" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="200dp"
            app:layout_constraintTop_toBottomOf="@+id/kanji_question" app:layout_constraintHorizontal_bias="0.498"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/answer" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/next_button" android:contentDescription="Hello"/>
    <TextView
            android:text="@string/text_wrap_test"
            android:layout_width="wrap_content"
            android:layout_height="128dp"
            android:id="@+id/kana_and_reading" android:layout_marginTop="40dp"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/kanji_question" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="24sp" android:textAlignment="center" android:lineSpacingExtra="4sp"/>
</android.support.constraint.ConstraintLayout>